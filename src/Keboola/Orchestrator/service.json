{
	"name": "Keboola Orchestrator",
	"apiVersion": "2014-03-28",
	"baseUrl": "https://syrup.keboola.com/orchestrator",
	"description": "Keboola Orchestrator API PHP Client",
	"operations": {
		"GetOrchestrations": {
			"httpMethod": "GET",
			"uri": "orchestrations",
			"summary": "Get registered orchestrations"
		},
		"GetOrchestration": {
			"httpMethod": "GET",
			"uri": "orchestrations/{orchestrationId}",
			"summary": "Get orchestration details",
			"parameters": {
				"orchestrationId": {
					"location": "uri",
					"type": "integer",
					"required": true
				}
			}
		},
		"CreateOrchestration": {
			"httpMethod": "POST",
			"uri": "orchestrations",
			"summary": "Orchestrator registration",
			"parameters": {
				"name": {
					"location": "json",
					"type": "string",
					"required": true
				},
				"crontabRecord": {
					"location": "json",
					"type": "string",
					"required": false
				},
				"tokenId": {
					"location": "json",
					"type": "string",
					"required": false
				},
                "tasks": {
                    "location": "json",
                    "type": "array",
                    "default": null,
                    "items": {
                        "component": {
                            "type": "string",
                            "required": false
                        },
                        "componentUrl": {
                            "type": "string",
                            "required": false
                        },
                        "action": {
                            "type": "string",
                            "required": false
                        },
                        "actionParameters": {
                            "type": "object",
                            "required": false
                        },
                        "continueOnFailure": {
                            "type": "boolean",
                            "required": false
                        },
                        "active": {
                            "type": "boolean",
                            "required": false
                        },
                        "timeoutMinutes": {
                            "type": "integer",
                            "required": false
                        },
                        "phase": {
                            "type": "string",
                            "required": false
                        }
                    },
                    "required": false
                },
                "notifications": {
                    "location": "json",
                    "type": "array",
                    "default": null,
                    "items": {
                        "email": {
                            "type": "string",
                            "required": false
                        },
                        "channel": {
                            "type": "string",
                            "required": false
                        },
                        "parameters": {
                            "type": "object",
                            "required": false
                        }
                    },
                    "required": false
                }
			}
		},
		"UpdateOrchestration": {
			"httpMethod": "PUT",
			"uri": "orchestrations/{orchestrationId}",
			"summary": "Update orchestration",
			"parameters": {
				"orchestrationId": {
					"location": "uri",
					"type": "integer",
					"required": true
				},
				"name": {
					"location": "json",
					"type": "string",
					"required": false
				},
				"crontabRecord": {
					"location": "json",
					"type": "string",
					"required": false
				},
				"tokenId": {
					"location": "json",
					"type": "string",
					"required": false
				},
				"active": {
					"location": "json",
					"type": "boolean",
					"required": false
				},
				"tasks": {
					"location": "json",
					"type": "array",
					"default": null,
                    "items": {
                        "component": {
                            "type": "string",
                            "required": false
                        },
                        "componentUrl": {
                            "type": "string",
                            "required": false
                        },
                        "action": {
                            "type": "string",
                            "required": false
                        },
                        "actionParameters": {
                            "type": "object",
                            "required": false
                        },
                        "continueOnFailure": {
                            "type": "boolean",
                            "required": false
                        },
                        "active": {
                            "type": "boolean",
                            "required": false
                        },
                        "timeoutMinutes": {
                            "type": "integer",
                            "required": false
                        },
                        "phase": {
                            "type": "string",
                            "required": false
                        }
                    },
					"required": false
				},
				"notifications": {
					"location": "json",
					"type": "array",
					"default": null,
                    "items": {
                        "email": {
                            "type": "string",
                            "required": false
                        },
                        "channel": {
                            "type": "string",
                            "required": false
                        },
                        "parameters": {
                            "type": "object",
                            "required": false
                        }
                    },
					"required": false
				}
			}
		},
		"DeleteOrchestration": {
			"httpMethod": "DELETE",
			"uri": "orchestrations/{orchestrationId}",
			"summary": "Delete orchestration",
			"parameters": {
				"orchestrationId": {
					"location": "uri",
					"type": "integer",
					"required": true
				}
			}
		},
		"GetOrchestrationJobs": {
			"httpMethod": "GET",
			"uri": "orchestrations/{orchestrationId}/jobs",
			"summary": "List orchestration jobs",
			"parameters": {
				"orchestrationId": {
					"location": "uri",
					"type": "integer",
					"required": true
				}
			}
		},
		"GetJob": {
			"httpMethod": "GET",
			"uri": "jobs/{jobId}",
			"summary": "Get job details",
			"parameters": {
				"jobId": {
					"location": "uri",
					"type": "integer",
					"required": true
				}
			}
		},
		"RunOrchestration": {
			"httpMethod": "POST",
			"uri": "run",
			"summary": "Manualy execute orchestration",
			"parameters": {
				"config": {
					"location": "json",
					"type": "integer",
					"required": true
				},
				"notificationsEmails": {
					"location": "json",
					"type": "array",
					"required": false
				},
				"tasks": {
					"location": "json",
					"type": "array",
					"required": false
				}
			}
		},
		"CreateJob": {
			"httpMethod": "POST",
			"uri": "orchestrations/{orchestrationId}/jobs",
			"summary": "Manualy execute orchestration",
			"parameters": {
				"orchestrationId": {
					"location": "uri",
					"type": "integer",
					"required": true
				},
				"notificationsEmails": {
					"location": "json",
					"type": "array",
					"required": false
				}
			}
		},
		"CancelJob": {
			"httpMethod": "DELETE",
			"uri": "jobs/{jobId}",
			"summary": "Cancel waiting job",
			"parameters": {
				"jobId": {
					"location": "uri",
					"type": "integer",
					"required": true
				}
			}
		},
        "UpdateOrchestrationTasks": {
            "httpMethod": "PUT",
            "uri": "orchestrations/{orchestrationId}/tasks",
            "summary": "Update orchestration tasks",
            "parameters": {
                "orchestrationId": {
                    "location": "uri",
                    "type": "integer",
                    "required": true
                },
                "tasks": {
                    "location": "body",
                    "type": "string",
                    "required": false
                }
            }
        }
	}
}